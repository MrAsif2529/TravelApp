    <androidx.cardview.widget.CardView
        android:id="@+id/imageView3"
        android:layout_width="227dp"
        android:layout_height="166dp"
        android:layout_marginTop="4dp"
        android:background="@color/Black"
        app:cardCornerRadius="10dp"
        app:cardElevation="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="132dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#F9F9F9"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/recCityImage"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_style"
                android:scaleType="fitXY"
                android:src="@drawable/burj_khalifa" />

            <TextView
                android:id="@+id/recRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/label_background"
                android:backgroundTint="@color/Gray"
                android:drawableLeft="@drawable/baseline_star_24"
                android:fontFamily="@font/dmsans"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="4.5"
                android:textColor="@color/White"
                android:textColorHint="@color/White"
                android:textSize="10sp" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/recCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/label_background"
            android:fontFamily="@font/dmsans"
            android:gravity="center"
            android:hint="Burj ul Khalifa"
            android:padding="3dp"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="10sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:id="@+id/favIcon"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/curve_shap"
            android:src="@drawable/baseline_favorite_24" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>