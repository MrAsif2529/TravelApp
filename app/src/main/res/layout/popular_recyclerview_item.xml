<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <View
        android:id="@+id/view"
        android:layout_width="182dp"
        android:layout_height="255dp"
        android:background="@drawable/rounded_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        android:elevation="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@id/view">

        <ImageView
            android:id="@+id/cityimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:scaleType="fitXY"
            android:src="@drawable/burj_khalifa" />

        <TextView
            android:id="@+id/popularcityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_background"
            android:gravity="center"
            android:hint="Burj ul Khalifa"
            android:fontFamily="@font/dmsans"
            android:padding="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="180dp"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_background"
            android:backgroundTint="@color/Gray"
            android:drawableLeft="@drawable/baseline_star_24"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="210dp"
            android:text="4.5"
            android:fontFamily="@font/dmsans"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="10sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_gray"
            android:layout_marginTop="210dp"
            android:background="@drawable/curve_shap"
            android:layout_marginStart="130dp"/>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>