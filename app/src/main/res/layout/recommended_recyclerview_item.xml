<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <View
        android:id="@+id/view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/recCityImage"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_style"
            android:scaleType="fitXY"
            android:src="@drawable/burj_khalifa" />

        <TextView
            android:id="@+id/recCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/label_background"
            android:fontFamily="@font/dmsans"
            android:gravity="center"
            android:hint="Burj ul Khalifa"
            android:padding="3dp"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/recRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/label_background"
            android:backgroundTint="@color/Gray"
            android:drawableLeft="@drawable/baseline_star_24"
            android:fontFamily="@font/dmsans"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="4.5"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="10sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/curve_shap"
            android:src="@drawable/baseline_favorite_24" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>