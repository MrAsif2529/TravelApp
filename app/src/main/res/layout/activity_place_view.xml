<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="376dp"
        android:layout_height="334dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView3"
        android:layout_width="371dp"
        android:layout_height="338dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@id/view">

        <ImageView
            android:id="@+id/statecityImage"
            android:layout_width="474dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:scaleType="fitXY"
            android:src="@drawable/login_img" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_border"
            android:src="@drawable/baseline_keyboard_arrow_left_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="47dp"
            android:layout_height="50dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/curve_shap"
            android:src="@drawable/baseline_favorite_24" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/statecityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Burj ul Arab"
        android:textColor="@color/Black"
        android:fontFamily="@font/dmsans"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:text="Show map"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/dmsans"
        app:layout_constraintBottom_toBottomOf="@+id/statecityName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/statecityName"
        app:layout_constraintTop_toTopOf="@+id/statecityName" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/baseline_star_24"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="4.5"
        android:fontFamily="@font/dmsans"
        android:textColor="@color/Gray"
        android:textColorHint="@color/Gray"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/textView16"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/statecityName"
        app:layout_constraintTop_toBottomOf="@+id/statecityName" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="(356 Reviews)"
        android:textColorHint="@color/Gray"
        android:textColor="@color/Gray"
        android:fontFamily="@font/dmsans"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <TextView
        android:id="@+id/statecityDetails"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dmsans"
        android:text="The Burj Al Arab's graceful silhouette – meant to evoke the sail of a dhow (a traditional wooden cargo vessel) – is to Dubai what the Eiffel Tower is to Paris. Completed in 1999, this iconic landmark hotel sits on an artificial island and comes with its own helipad and a fleet of chauffeur-driven Rolls Royce limousines. Beyond the striking lobby, with its gold-leaf opulence and attention-grabbing fountain, lie 202 suites with more trimmings than a Christmas turkey."   app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="52dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/curve_shap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statecityDetails">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/google_marker" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/dmsans"
            android:text="Do you like the place?"
            android:textColor="@color/Green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/dmsans"
            android:text="Rate it"
            android:textColor="@color/Blue"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_keyboard_arrow_up_24" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>