<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#ffffff" /> <!-- Background color -->
    <corners android:radius="8dp" /> <!-- Corner radius -->
    <padding
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp" /> <!-- Shadow padding -->
    <corners android:radius="8dp" />
    <stroke
        android:width="1dp"
        android:color="#808080" /> <!-- Border color -->
    <gradient
        android:startColor="#F8F6F6"
        android:endColor="#EDECEC"
        android:angle="270" /> <!-- Gradient -->
</shape>
