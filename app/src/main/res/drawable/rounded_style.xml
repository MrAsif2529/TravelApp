<!-- rounded_image_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF" /> <!-- Inner color of the ImageView -->
    <corners android:radius="20dp" /> <!-- Radius for curved corners -->

    <stroke
        android:width="2dp"
    android:color="#CCCCCC" /> <!-- Border color -->
</shape>
